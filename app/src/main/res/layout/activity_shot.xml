<?xml version="1.0" encoding="utf-8"?>
<com.wangdaye.waves.ui.widget.SwipeBackLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_shot_swipeBackLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <FrameLayout
        android:id="@+id/activity_shot_shadow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorShadow" />

    <FrameLayout
        android:id="@+id/activity_shot_statusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryDark" />

    <com.wangdaye.waves.ui.widget.ShotScrollParent
        android:id="@+id/activity_shot_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.wangdaye.waves.ui.widget.RevealView
            android:id="@+id/activity_shot_revealView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.wangdaye.waves.ui.widget.ShotBarLayout
            android:id="@+id/activity_shot_shotBar"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/activity_shot_shot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="?attr/selectableItemBackground"
                android:scaleType="centerCrop"
                android:transitionName="@string/key_transition_anim"
                android:background="@drawable/shot_background_2"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7"
                tools:src="@drawable/nav_header"
                tools:layout_height="300dp"
                tools:ignore="ContentDescription,UnusedAttribute" />

        </com.wangdaye.waves.ui.widget.ShotBarLayout>

        <com.wangdaye.waves.ui.widget.ShotScrollView
            android:id="@+id/activity_shot_scrollView"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="256dp"
            android:clipToPadding="false"
            android:scrollbars="none"
            tools:visibility="visible">

            <include layout="@layout/container_shot" />

        </com.wangdaye.waves.ui.widget.ShotScrollView>

        <com.wangdaye.waves.ui.widget.MyFloatingActionButton
            android:id="@+id/activity_shot_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginTop="308dp"
            android:layout_marginRight="@dimen/fab_margin"
            android:src="@drawable/ic_download"
            android:visibility="gone"
            tools:ignore="RtlHardcoded"
            tools:visibility="visible" />

    </com.wangdaye.waves.ui.widget.ShotScrollParent>

</com.wangdaye.waves.ui.widget.SwipeBackLayout>