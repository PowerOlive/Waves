<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_comment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/root_background"
    android:foreground="?attr/selectableItemBackground">

    <com.wangdaye.waves.ui.widget.CircleImageView
        android:id="@+id/item_comment_icon"
        android:layout_width="@dimen/normal_icon_size"
        android:layout_height="@dimen/normal_icon_size"
        android:layout_margin="@dimen/card_info_margin"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        app:civ_fill_color="@android:color/white"
        tools:src="@drawable/ic_launcher"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/item_comment_title"
        android:layout_marginTop="@dimen/card_info_margin"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/item_comment_icon"
        style="@style/comment_title"
        tools:text="WangDaYeeeeee"
        tools:ignore="RtlHardcoded" />

    <org.sufficientlysecure.htmltextview.HtmlTextView
        android:id="@+id/item_comment_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin"
        android:layout_marginBottom="@dimen/card_margin"
        android:layout_below="@id/item_comment_title"
        android:layout_toRightOf="@id/item_comment_icon"
        style="@style/comment_content"
        tools:text="An ocean (from Ancient Greek Ὠκεανός.An ocean (from Ancient Greek Ὠκεανός.An ocean (from Ancient Greek Ὠκεανός."
        tools:ignore="RtlHardcoded" />

</RelativeLayout>